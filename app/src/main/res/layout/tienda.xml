<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/nameproducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Producto nombre"
        android:textSize="20dp"
        android:textStyle="bold"
        android:maxLines="1"
        android:maxLength="15"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagen"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toLeftOf="@id/nameproducto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descripcion"
        android:layout_width="160dp"
        android:layout_height="43dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="DescripciÃ³n producto"
        android:textSize="15dp"
        android:maxLines="1"
        app:layout_constraintLeft_toRightOf="@id/imagen"
        app:layout_constraintTop_toBottomOf="@id/nameproducto" />

    <TextView
        android:id="@+id/calificacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="168dp"
        android:text="Calificacion"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="@id/nameproducto"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/nameproducto"
        tools:layout_editor_absoluteY="28dp" />
    <TextView
        android:id="@+id/precio"
        android:layout_width="88dp"
        android:layout_height="27dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="26dp"
        android:text="Precio"
        android:textSize="15dp"
        android:textColor="@color/Azul"
        app:layout_constraintLeft_toRightOf="@id/descripcion"
        app:layout_constraintTop_toBottomOf="@id/calificacion"
        tools:layout_editor_absoluteY="28dp" />
    <Button
        android:id="@+id/detalles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalles"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/precio"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/descripcion"/>
</androidx.constraintlayout.widget.ConstraintLayout>